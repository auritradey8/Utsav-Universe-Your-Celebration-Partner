<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Utsav Universe | Shop</title>

    <!-- Stylesheets -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@docsearch/css@3"
    />
    <link rel="stylesheet" href="/styles/shop.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
    <style>
      .quantity-control {
        display: flex;
        align-items: center;
        gap: 5px;
        max-width: 120px;
      }
      .quantity-input {
        width: 40px;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg" style="background-color: #ff9a8b">
      <div class="container-fluid justify-content-between">
        <div></div>
        <div class="mx-auto">
          <h1 class="text-center text-white m-0">Our Collection</h1>
        </div>
        <div class="d-flex">
          <button
            onclick="window.location.href='/cart';"
            type="button"
            class="btn btn-warning"
          >
            <i class="bi bi-cart"></i>
            <span id="cart-count" class="badge rounded-pill bg-danger">
              <%= typeof cartCount !== 'undefined' ? cartCount : 0 %>
            </span>
          </button>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <% products.forEach(product => { %>
        <div class="col-md-3 mb-4">
          <div class="card h-100">
            <img
              src="/img/<%= product.image %>"
              class="card-img-top"
              alt="<%= product.name %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <div class="product-rating"><span>⭐⭐⭐⭐☆</span> (7)</div>
              <p class="card-text">
                <strong>₹<%= product.price %></strong>
                <span style="text-decoration: line-through"
                  >₹<%= product.original %></span
                >
                <span class="text-success" style="font-size: 0.8em"
                  ><b><%= product.discount %> off</b></span
                >
              </p>

              <form class="add-to-cart-form" method="POST">
                <input type="hidden" name="itemId" value="<%= product._id %>" />
                <input type="hidden" name="itemType" value="Shop" />
                <div class="quantity-control mb-2">
                  <button
                    type="button"
                    class="btn btn-sm btn-outline-secondary minus-btn"
                  >
                    -
                  </button>
                  <input
                    type="text"
                    name="quantity"
                    class="form-control form-control-sm quantity-input"
                    value="1"
                    readonly
                  />
                  <button
                    type="button"
                    class="btn btn-sm btn-outline-secondary plus-btn"
                  >
                    +
                  </button>
                </div>
                <button type="submit" class="btn btn-warning w-100 add-btn">
                  Add to Cart
                </button>
                <button
                  type="button"
                  class="btn btn-outline-danger w-100 mt-2 delete-btn"
                  style="display: none"
                >
                  Remove from Cart
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.querySelectorAll(".add-to-cart-form").forEach((form) => {
        const minusBtn = form.querySelector(".minus-btn");
        const plusBtn = form.querySelector(".plus-btn");
        const qtyInput = form.querySelector(".quantity-input");
        const addBtn = form.querySelector(".add-btn");
        const deleteBtn = form.querySelector(".delete-btn");
        const itemId = form.querySelector("input[name='itemId']").value;
        const itemType = form.querySelector("input[name='itemType']").value;

        async function updateCart(quantity) {
          const res = await fetch("/update-cart", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ itemId, itemType, quantity }),
          });

          const data = await res.json();
          if (res.ok) {
            document.getElementById("cart-count").textContent = data.cartCount;
          } else {
            alert(data.message || "Error updating cart");
          }
        }

        async function removeFromCart() {
          const res = await fetch("/api/remove-from-cart", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ itemId, itemType }),
          });

          const data = await res.json();
          if (res.ok) {
            document.getElementById("cart-count").textContent = data.cartCount;
            addBtn.disabled = false;
            addBtn.classList.remove("btn-success");
            addBtn.classList.add("btn-warning");
            addBtn.textContent = "Add to Cart";
            deleteBtn.style.display = "none";
          } else {
            alert(data.message || "Error removing item");
          }
        }

        minusBtn.addEventListener("click", async () => {
          let qty = parseInt(qtyInput.value) || 1;
          if (qty > 1) {
            qty -= 1;
            qtyInput.value = qty;
            await updateCart(qty);
          } else {
            qtyInput.value = 1;
            await updateCart(1);
          }
        });

        plusBtn.addEventListener("click", async () => {
          let qty = parseInt(qtyInput.value) || 1;
          if (qty < 10) {
            qty += 1;
            qtyInput.value = qty;
            await updateCart(qty);
          }
        });

        form.addEventListener("submit", async (e) => {
          e.preventDefault();
          const quantity = parseInt(qtyInput.value) || 1;

          const res = await fetch("/add-to-cart", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ itemId, itemType, quantity }),
          });

          const data = await res.json();

          if (res.ok) {
            addBtn.disabled = true;
            addBtn.classList.remove("btn-warning");
            addBtn.classList.add("btn-success");
            addBtn.textContent = "Added";
            deleteBtn.style.display = "inline-block";
            document.getElementById("cart-count").textContent = data.cartCount;
          } else {
            alert(data.message || "Error adding to cart");
          }
        });

        deleteBtn.addEventListener("click", async () => {
          await removeFromCart();
        });
      });
    </script>
  </body>
</html>
