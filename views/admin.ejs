<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Portal | Utsav universe</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="text-center mb-4">Admin Portal - Jodi Junction</h2>

    <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="decorators-tab" data-bs-toggle="pill" data-bs-target="#decorators" type="button" role="tab">Decorators</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="halls-tab" data-bs-toggle="pill" data-bs-target="#halls" type="button" role="tab">Community Halls</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="priests-tab" data-bs-toggle="pill" data-bs-target="#priests" type="button" role="tab">Priests</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="caterers-tab" data-bs-toggle="pill" data-bs-target="#caterers" type="button" role="tab">Caterers</button>
      </li>
    </ul>

    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="decorators" role="tabpanel">
            <h4 class="mb-3">Manage Decorators</h4>
            <form method="POST" action="/admin/decorators">
              <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="name" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Average Pricing</label>
                <input type="number" name="avg_pricing" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Location</label>
                <input type="text" name="location" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Mobile</label>
                <input type="text" name="mob" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="mail" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Services Involved (comma separated)</label>
                <input type="text" name="services_involved" class="form-control">
              </div>
              <div class="mb-3">
                <label class="form-label">Average Rating</label>
                <input type="number" step="0.1" name="avg_rating" class="form-control">
              </div>
          
              <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success" name="action" value="add">Add</button>
                <button type="submit" class="btn btn-primary" name="action" value="update">Update</button>
                <button type="submit" class="btn btn-danger" name="action" value="delete">Delete</button>
              </div>
            </form>
            <h5 class="mt-4">Existing Decorators</h5>
            <table class="table table-striped table-bordered">
            <thead>
                <tr>
                <th>Name</th><th>Avg Pricing</th><th>Location</th><th>Mobile</th><th>Email</th><th>Services</th><th>Rating</th>
                </tr>
            </thead>
            <tbody>
                <% decorators.forEach(d => { %>
                <tr>
                    <td><%= d.name %></td>
                    <td><%= d.avg_pricing %></td>
                    <td><%= d.location %></td>
                    <td><%= d.mob %></td>
                    <td><%= d.mail %></td>
                    <td><%= d.services_involved %></td>
                    <td><%= d.avg_rating %></td>
                </tr>
                <% }); %>
            </tbody>
            </table>
        </div>
